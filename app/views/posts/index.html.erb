<div class="hero-unit">
  <h1>rails-test</h1>
   <p>Blog</p>
</div>

<% @posts.each do |post| %>
<div class="post">
  <h3 class="post-title">
    <%= post.title %>
  </h2>
  
  <div class="post-header">
    Posted by <%= post.user %>
    at <%= post.created_at %>
  </div>

  <div class="post-body">
    <%= post.body %>
  </div>
</div>

<a href=<%= url_for post %> class="btn btn-info">
  More
</a>

<% if current_user && post.user == current_user.username %>
<a href=<%= url_for edit_post_path(post) %> class="btn btn-standart">
  Edit
</a>
<% end %>

<% if current_user &&  post.user == current_user.username %>
<a href=<%= url_for(post) %> data-method="delete" class="btn btn-danger">
  Destroy
</a>
<% end %>

<% end %>

<div class="row">
  <div class="span2">
    <div class="btn-group">
      <button class="btn"></button>
    </div>
  </div>
</div>
</div>​