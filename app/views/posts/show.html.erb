<p id="notice"><%= notice %></p>

<p>
	<b>User:</b>
	<%= @post.user %>
</p>

<p>
	<b>Title:</b>
	<%= @post.title %>
</p>

<p>
	<b>Body:</b>
	<%= @post.body %>
</p>

<% if current_user && @post.user == current_user.username %>
<a href=<%= url_for edit_post_path(@post) %> class="btn btn-standart">
	Edit
</a>
<% end %>

<% if current_user && @post.user == current_user.username %>
<a href=<%= url_for(@post) %> data-method="delete" class="btn btn-danger">
	Destroy
</a>
<% end %>
<br><br>

<%= form_for(Comment.new) do |f| %>
<%= f.hidden_field :post, value: @post.id %>
<%= f.text_area :body, :size => "10x2"%>
<%= f.submit "Add comment"%>
<% end %>

<% @comments.each do |f| %>
<%= f.user %>
<%= f.created_at %>
<br>
<%= f.body %>
<br>
<br>
<% end %>


